enum Sexe {
  Homme
  Femme
}

enum UserRole {
  USER
  RECRUITER
  ADMIN
}

enum JobType {
  // FULL_TIME
  // PART_TIME
  // CONTRACT
  FREELANCE
  CDI
  CDD
  STAGE
  INTERIM
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum SubscriptionPlan {
  BASIC
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}
